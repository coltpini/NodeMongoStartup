rotateElement(n)
	-webkit-transform rotate(n)
	-moz-transform rotate(n)
	-ms-transform rotate(n)
	-o-transform rotate(n)
	transform rotate(n)

transition(n, d, e)
	-webkit-transition n d e
	-moz-transition n d e
	-o-transition n d e
	transition n d e

box-sizing(val)
	-moz-box-sizing val
	-webkit-box-sizing val
	box-sizing val

mTransition(n, d)
	-webkit-transition n d
	-moz-transition n d
	-o-transition n d
	transition n d

backgroundGradient(a,b)
	background-color a
	background-image -webkit-gradient(linear, left top, left bottom, from(a), to(b))
	background-image -webkit-linear-gradient(top, a, b)
	background-image -moz-linear-gradient(top, a, b)
	background-image -o-linear-gradient(top, a, b)
	background-image linear-gradient(to bottom, a, b)

topGradient(a,b)
	background-color b
	background-image -webkit-gradient(linear, left top, left bottom, from(a), to(b))
	background-image -webkit-linear-gradient(top, a, b)
	background-image -moz-linear-gradient(top, a, b)
	background-image -o-linear-gradient(top, a, b)
	background-image linear-gradient(to bottom, a, b)

